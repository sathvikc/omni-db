{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "declaration": false,
        "resolveJsonModule": true
    },
    "include": [
        "types/**/*.d.ts",
        "examples/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
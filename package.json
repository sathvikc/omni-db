{
  "name": "omni-db",
  "version": "0.1.0",
  "description": "Thin database orchestration library for Node.js - manage multiple connections with health monitoring and failover",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./types/index.d.ts"
    }
  },
  "types": "./types/index.d.ts",
  "files": [
    "src",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write .",
    "prepublishOnly": "npm run test:coverage"
  },
  "keywords": [
    "database",
    "orchestrator",
    "multi-database",
    "connection-pool",
    "health-check",
    "failover",
    "supabase",
    "prisma",
    "mongodb",
    "redis"
  ],
  "author": "Sathvik C",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sathvikc/omni-db.git"
  },
  "bugs": {
    "url": "https://github.com/sathvikc/omni-db/issues"
  },
  "homepage": "https://github.com/sathvikc/omni-db#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0"
  }
}
{
  "name": "omni-db",
  "version": "0.0.0",
  "description": "Thin database orchestration library for Node.js - manage multiple connections with health monitoring and failover",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "database",
    "orchestrator",
    "multi-database",
    "connection-pool",
    "health-check",
    "failover"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0"
  }
}